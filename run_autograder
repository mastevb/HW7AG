#!/usr/bin/env bash

# copy submission files for testing
cp /autograder/submission/hw5-q1.sql /autograder/source/submission
cp /autograder/submission/hw5-q2.sql /autograder/source/submission
cp /autograder/submission/hw5-q3.sql /autograder/source/submission
cp /autograder/submission/hw5-q4.sql /autograder/source/submission
cp /autograder/submission/hw5-q5.sql /autograder/source/submission
cp /autograder/submission/hw5-q6.sql /autograder/source/submission
cp /autograder/submission/hw5-q7.sql /autograder/source/submission

cd /autograder/source

./asterixDB/opt/local/bin/start-sample-cluster.sh

python run_tests.py --timeout=1200

./asterixDB/opt/local/bin/stop-sample-cluster.sh

